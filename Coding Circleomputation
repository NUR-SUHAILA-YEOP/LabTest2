package quiz2;
import java.util.Scanner;
class CircleComputation {

	public static void main(String[] args) {
		/*1.1. Write a program called CircleComputation that prompts user for the radius of a circle in floating point number. 
		 * The program shall read the input as double; compute the diameter, circumference, and area of the circle in double;
		 * and print the values rounded to 2 decimal places. Use System-provided constant Math.PI for pi. The formulas are:

		
*/
		Scanner sc = new Scanner(System.in);
			
		double radius,diameter, circumference, area;
		
		System.out.print("Please enter radius of a circle: ");
		radius = sc.nextDouble();
		
		//calculation
		diameter = 2.0 * radius;
		area = Math.PI * radius * radius;
		circumference = 2.0 * Math.PI * radius;
		
		
		System.out.print("\nThe radius of cirle is: " + radius);
		System.out.printf("\nThe diameter of circle is : %.2f " , diameter);
		System.out.printf("\nThe area of circle is : %.2f " , area);
		System.out.printf("\nThe circumference of circle is : %.2f " , circumference);
	}
}
